@model IEnumerable<GradeWebApp.Models.User>

@{
    ViewBag.Title = "Index";
}

@*@Html.Partial("_UserMenu")*@
@Html.Partial("_IndexLayout")

<div class="panel panel-primary">

    <div class="panel-heading">Students</div>

    <div class="panel-body">

        <div class="dataTable_wrapper">

            <div class="panel-body ">
                @Html.ActionLink("Add User", "Create", "User", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary pull-left" })
            </div>

                <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
                            <th>@Html.DisplayNameFor(model => model.Username)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Password)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstName)</th>
                            <th>@Html.DisplayNameFor(model => model.LastName)</th>
                            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                            <th>@Html.LabelFor(model => model.First().CreateDate, "Creation Date")</th>
                            <th>@Html.DisplayNameFor(model => model.IsLocked)</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Username)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Password)</td>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreateDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsLocked)</td>
                            <td>
                                @Html.Partial("_ActionMenuLayout")

                                <li>@Html.ActionLink("Edit", "Edit", new { id = item.UserId }, new {data_modal ="" })</li>
                                @*<li>@Html.ActionLink("Details", "Details", new { id = item.UserId }, new {data_modal ="" })</li>*@
                                @*<li>@Html.ActionLink("Delete", "Delete", new { id = item.UserId })</li>*@

                                @Html.Partial("_ActionMenuLayout2")
                            </td>
                        </tr>
                    }
                </table>

                @Html.Partial("_IndexLayout2")

                @section Scripts {
                    @Scripts.Render("~/bundles/modalform")
                    @*@Scripts.Render("~/bundles/mask")*@
                }

@model IEnumerable<GradeWebApp.Models.Book>

@{
    ViewBag.Title = "Index";
}


@Html.Partial("_IndexLayout")

<div class="panel panel-primary">

    <div class="panel-heading">Books</div>

    <div class="panel-body">

        <div class="dataTable_wrapper">

            <div class="panel-body ">
                @Html.ActionLink("Add Book", "Create", "Book", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary pull-left" })
            </div>

            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>
                            @Html.LabelFor(model => model.First().BookId, "Book ID")
                        </th>
                        <th>
                            @Html.LabelFor(model => model.First().Book_Name, "Book Name")
                        </th>
                        <th>
                            @Html.LabelFor(model => model.First().ISBN10, "ISBN-10")
                        </th>
                        <th>
                            @Html.LabelFor(model => model.First().ISBN13, "ISBN-13")
                        </th>
                        <th>
                            @Html.LabelFor(model => model.First().Pages, "Pages ")
                        </th>
                        <th>
                            @Html.LabelFor(model => model.First().Publisher, "Publisher ")
                        </th>
                        <th>
                            @Html.LabelFor(model => model.First().Language, "Language ")
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.BookId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Book_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ISBN10)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ISBN13)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pages)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Publisher)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Language)
                        </td>
                        <td>
                            @Html.Partial("_ActionMenuLayout")

                            <li>@Html.ActionLink("Details", "Details", new { id = item.BookId }, new { data_modal = "" })</li>
                            <li>@Html.ActionLink("Edit", "Edit", new { id = item.BookId }, new { data_modal = "" })</li>
                            @*<li class="divider"></li>
                            <li>@Html.ActionLink("Delete", "Delete", new { id = item.BookId }, new { data_modal = "" })</li>*@

                            @Html.Partial("_ActionMenuLayout2")
                        </td>
                    </tr>
                }

            </table>

            @Html.Partial("_IndexLayout2")

@section scripts{
  @Scripts.Render("~/bundles/modalform")
  @Scripts.Render("~/bundles/mask")
}
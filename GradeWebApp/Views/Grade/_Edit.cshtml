
@model GradeWebApp.Models.Grade

@{
    ViewBag.Title = "Edit";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Edit Book</h4>
</div>

<br />

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    
 <div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.GradeId)

        <div class="form-group">
            @Html.LabelFor(model => model.Student_ID, "Student Fullname: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.student.Fullname, null, new { @class = "campo", @readonly = "true", @disabled = "disabled"})
                @Html.HiddenFor(model => model.Student_ID)
                @Html.ValidationMessageFor(model => model.Student_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Book_ID, "Book: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.book.Book_Name, null, new { @class = "campo", @readonly = "true", @disabled = "disabled" })
                @Html.HiddenFor(model => model.Book_ID)
                @Html.ValidationMessageFor(model => model.Book_ID, "", new { @class = "text-danger" })
            </div>
        </div>

     <div class="form-group">
         @Html.LabelFor(model => model.Chapter_ID, "Chapter: ", htmlAttributes: new { @class = "control-label col-md-3" })
         <div class="col-md-9">
             @Html.TextBoxFor(model => model.chapter.ChapterDescription, null, new { @class = "campo", @readonly = "true", @disabled = "disabled"})
             @Html.HiddenFor(model => model.Chapter_ID)
             @Html.ValidationMessageFor(model => model.Chapter_ID, "", new { @class = "text-danger" })
         </div>
     </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Homework, "Homework: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Homework, new { @class = "campo", @autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Homework, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Excercise, "Exercise: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Excercise, new { @class = "campo", @autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Excercise, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Participation, "Participation: ", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBoxFor(model => model.Participation, new { @class = "campo", @autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.Participation, "", new { @class = "text-danger" })
            </div>
        </div>
</div>

       @Html.Partial("_SubmitButton")
}

@model GradeWebApp.Models.Login

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center logo-margin ">
            @*<img src="~/Content/assets/img/Logo_CDEEE.png" width="350" height="170" alt="" />*@
        </div>

        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title-login text-center">Sign In</h3>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
  
                            @Html.ValidationSummary(true)
                        
                           if (ViewBag.blockedUser != null)
                           {
                               <script>
                                   $(document).ready(function () {

                                       bootbox.alert('<br/><div class="alert alert-danger">@ViewBag.blockedUser</div>')

                                   });
                               </script>
                           }

                            <div class="form-group">
                                @Html.LabelFor(model => model.Username, new { @class = "control-label" })
                                    @Html.TextBoxFor(model => model.Username, new {@autocomplete="off",@class="form-control", autofocus="autofocus" })
                                    @Html.ValidationMessageFor(model => model.Username)
                                
                                <br />

                          @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                                    @Html.PasswordFor(model => model.Password, new { @autocomplete="off", @class="form-control" })
                                    @Html.ValidationMessageFor(model => model.Password)

                                <br />

                                @Html.LabelFor(model => model.RememberMe, new { @class = "control-label" })
                                    @Html.EditorFor(model => model.RememberMe, new { @autocomplete = "off", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RememberMe)
                            </div>

                           <input type="submit" value="Sign In" id="Sign In" class="btn btn-lg btn-primary btn-block" />
                          
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
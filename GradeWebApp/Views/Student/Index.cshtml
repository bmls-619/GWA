@model IEnumerable<GradeWebApp.Models.Student>

@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@

@*@Html.Partial("_StudentMenu")*@
@Html.Partial("_IndexLayout")

<div class="panel panel-primary">

    <div class="panel-heading">Students</div>

    <div class="panel-body">

        <div class="dataTable_wrapper">

            <div class="panel-body ">
                @Html.ActionLink("Add Student", "Create", "Student", null, new { data_modal = "", id = "btnCreate", @class = "btn btn-small btn-primary pull-left" })
            </div>

            <table class="table table-striped table-bordered table-hover" id="dataTables-example">

                <thead>
                    <tr>
                        <th>
                                @Html.LabelFor(model => model.First().StudentId,"Student ID")
                            </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.LabelFor(model => model.First().LastName, "Lastname")
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Level)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                                @Html.DisplayFor(modelItem => item.StudentId)
                            </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Level)
                        </td>
                        <td>
                            @Html.Partial("_ActionMenuLayout")

                            <li>@Html.ActionLink("Details", "Details", new { id = item.StudentId }, new { data_modal = "" })</li>
                            <li>@Html.ActionLink("Edit", "Edit", new { id = item.StudentId }, new { data_modal = "" })</li>
                            @*<li class="divider"></li>
                            <li>@Html.ActionLink("Delete", "Delete", new { id = item.BookId }, new { data_modal = "" })</li>*@

                            @Html.Partial("_ActionMenuLayout2")
                        </td>
                    </tr>
                }
            </table>

            @Html.Partial("_IndexLayout2")


            @section Scripts {
                @Scripts.Render("~/bundles/modalform")
                @Scripts.Render("~/bundles/mask")
            }
